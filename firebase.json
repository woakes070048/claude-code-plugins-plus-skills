{
  "hosting": [
    {
      "target": "skills-redirect",
      "public": "redirects/skills",
      "ignore": ["firebase.json", "**/.*"],
      "redirects": [
        {
          "source": "**",
          "destination": "https://claudecodeplugins.io",
          "type": 301
        }
      ]
    },
    {
      "target": "cowork-redirect",
      "public": "redirects/skills",
      "ignore": ["firebase.json", "**/.*"],
      "redirects": [
        {
          "source": "**",
          "destination": "https://claudecodeplugins.io/cowork",
          "type": 301
        }
      ]
    },
    {
      "public": "marketplace/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.@(js|css|woff2|woff|ttf|eot)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000, immutable"
            }
          ]
        },
        {
          "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|ico)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=604800"
            }
          ]
        }
      ]
    }
  ]
}
